{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@edu/ui": ["packages/ui"],
      "@edu/db": ["packages/db"],
      "@edu/auth": ["packages/auth"],
      "@edu/utils": ["packages/utils"]
    }
  }
}
